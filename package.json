{
  "name": "@platformcoop/pcc-framework",
  "version": "0.6.0",
  "description": "Utilities, custom post types and blocks for the Platform Cooperativism Consortium website.",
  "author": "Platform Cooperativism Consortium",
  "license": "BSD-3-Clause",
  "keywords": [
    "wordpress",
    "plugin",
    "custom post types",
    "blocks"
  ],
  "homepage": "https://github.com/platform-coop-toolkit/pcc-framework",
  "repository": "https://github.com/platform-coop-toolkit/pcc-framework",
  "bugs": "https://github.com/platform-coop-toolkit/pcc-framework/issues",
  "main": "Gruntfile.js",
  "devDependencies": {
    "@wordpress/eslint-plugin": "^2.2.0",
    "@wordpress/scripts": "^3.2.1",
    "grunt": "~1.0.4",
    "grunt-wp-i18n": "~1.0.3",
    "grunt-wp-readme-to-markdown": "~2.0.1"
  },
  "scripts": {
    "readme": "grunt readme",
    "start": "wp-scripts start",
    "build": "wp-scripts build",
    "lint:js": "wp-scripts lint-js ./src",
    "lint:css": "wp-scripts lint-style './src/**/*.css'",
    "lint:pkg-json": "wp-scripts lint-pkg-json .",
    "test": "npm run -s lint:js && npm run -s lint:css && npm run -s lint:pkg-json"
  },
  "npmPackageJsonLintConfig": {
    "extends": "@wordpress/npm-package-json-lint-config",
    "rules": {
      "valid-values-license": [
        "error",
        [
          "BSD-3-Clause"
        ]
      ]
    }
  }
}
